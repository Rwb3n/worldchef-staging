{
  "name": "worldchef-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "backend",
    "shared"
  ],
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.5.0",
    "@types/jest": "^30.0.0"
  },
  "scripts": {
    "dev": "yarn workspace worldchef-backend run dev",
    "start": "yarn workspace worldchef-backend run start",
    "build": "yarn workspace worldchef-backend run build",
    "start:prod": "yarn workspace worldchef-backend run start:prod",
    "postinstall": "yarn workspace worldchef-backend run build",
    "heroku-postbuild": "yarn workspace worldchef-backend run build",
    "test": "yarn workspaces run test",
    "test:ci": "yarn workspaces run test --coverage",
    "test:workspace": "yarn workspaces run test",
    "test:deno": "deno task test",
    "test:all": "yarn test && yarn test:deno",
    "render:diagrams": "node scripts/render-diagrams.js",
    "widgetbook:build:local": "cd mobile && flutter build web -t lib/widgetbook/widgetbook.dart --base-href / --output build/widgetbook",
    "widgetbook:build:prod": "cd mobile && flutter build web -t lib/widgetbook/widgetbook.dart --base-href /worldchef-staging/ --output build/widgetbook",
    "widgetbook:serve": "cd mobile/build/widgetbook && python -m http.server 8080",
    "widgetbook:dev": "yarn widgetbook:build:local && yarn widgetbook:serve"
  }
}
