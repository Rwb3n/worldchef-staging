{
  "@@locale": "en",
  "@@context": "WorldChef PoC Flutter - Recipe Detail Screen Localization",
  
  "recipeDetailTitle": "Recipe Details",
  "@recipeDetailTitle": {
    "description": "Title for the recipe detail screen app bar"
  },
  
  "recipeBy": "Recipe by {creatorName}",
  "@recipeBy": {
    "description": "Shows the creator of the recipe with interpolation",
    "placeholders": {
      "creatorName": {
        "type": "String",
        "example": "Gordon Ramsay"
      }
    }
  },
  
  "cookingTime": "Cooking Time",
  "@cookingTime": {
    "description": "Label for cooking time section"
  },
  
  "preparationTime": "Prep Time",
  "@preparationTime": {
    "description": "Label for preparation time section"
  },
  
  "servings": "Servings",
  "@servings": {
    "description": "Label for number of servings"
  },
  
  "difficulty": "Difficulty",
  "@difficulty": {
    "description": "Label for recipe difficulty level"
  },
  
  "ingredients": "Ingredients",
  "@ingredients": {
    "description": "Section header for recipe ingredients"
  },
  
  "ingredientCount": "{count, plural, =0{No ingredients} =1{1 ingredient} other{{count} ingredients}}",
  "@ingredientCount": {
    "description": "Displays the number of ingredients with pluralization",
    "placeholders": {
      "count": {
        "type": "int",
        "example": "5"
      }
    }
  },
  
  "cookingSteps": "Cooking Steps",
  "@cookingSteps": {
    "description": "Section header for cooking instructions"
  },
  
  "stepNumber": "Step {number}",
  "@stepNumber": {
    "description": "Step number label with interpolation",
    "placeholders": {
      "number": {
        "type": "int",
        "example": "1"
      }
    }
  },
  
  "totalTime": "Total: {minutes}m",
  "@totalTime": {
    "description": "Total cooking time display with interpolation",
    "placeholders": {
      "minutes": {
        "type": "int",
        "example": "45"
      }
    }
  },
  
  "rating": "Rating: {rating}/5",
  "@rating": {
    "description": "Recipe rating display with interpolation",
    "placeholders": {
      "rating": {
        "type": "double",
        "format": "decimalPattern",
        "example": "4.5"
      }
    }
  },
  
  "reviewCount": "{count, plural, =0{No reviews} =1{1 review} other{{count} reviews}}",
  "@reviewCount": {
    "description": "Review count with pluralization",
    "placeholders": {
      "count": {
        "type": "int",
        "example": "127"
      }
    }
  },
  
  "backToRecipes": "Back to Recipes",
  "@backToRecipes": {
    "description": "Accessibility label for back button"
  },
  
  "recipeImage": "Recipe image for {recipeName}",
  "@recipeImage": {
    "description": "Accessibility label for recipe hero image",
    "placeholders": {
      "recipeName": {
        "type": "String",
        "example": "Chocolate Cake"
      }
    }
  },
  
  "difficultyEasy": "Easy",
  "@difficultyEasy": {
    "description": "Easy difficulty level"
  },
  
  "difficultyMedium": "Medium",
  "@difficultyMedium": {
    "description": "Medium difficulty level"
  },
  
  "difficultyHard": "Hard",
  "@difficultyHard": {
    "description": "Hard difficulty level"
  }
} 